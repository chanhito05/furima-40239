<%= form_with(model: @item, local: true) do |form| %>
  <div class="field">
    <%= form.label :price, "価格" %>
    <%= form.number_field :price, min: 300, max: 9_999_999, required: true, step: 1, placeholder: "例）300", oninput: "validatePrice()" %>
    <span id="price-error" style="color: red; display: none;">価格は¥300~¥9,999,999の間の半角数値で入力してください。</span>
  </div>
  <!-- 他のフィールドはそのまま -->
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
